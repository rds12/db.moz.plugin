<?xml version="1.0"?>

<!DOCTYPE dialog SYSTEM "chrome://db.moz.plugin/locale/gui.preferences.dtd">

<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
         xmlns:html="http://www.w3.org/1999/xhtml">

  <!-- fleet-tab -->
  <tabpanel id='dbMozPluginTabpanelOdChangesFleet'>
    <!-- fleet overview -->
    <groupbox>
      <caption label='&odchanges.fleet.caption.fleetOverview;' />

      <!-- hide merged ships -->
      <checkbox id='preferences.fleet.hideMergedShips'
                label='&odchanges.fleet.hideMergedShips;' />

      <!-- unselect button -->
      <checkbox id='preferences.fleet.unselectButton'
                label='&odchanges.fleet.unselectButton;' />

      <!-- double click selection -->
      <checkbox id='preferences.fleet.dblClickSendButton'
                label='&odchanges.fleet.dblclickSend;' />

    </groupbox>

    <!-- dispatch menu -->
    <groupbox>
      <caption label='&odchanges.fleet.caption.dispatchMenu;' />

      <!-- focus direct input -->
      <checkbox id='preferences.fleet.focusDirectInput'
                label='&odchanges.fleet.focusDirectInput;' />

      <!-- orbit link -->
      <checkbox id='preferences.fleet.orbitLink'
                label='&odchanges.fleet.orbitLink;' />

    </groupbox>
  </tabpanel>
</overlay>